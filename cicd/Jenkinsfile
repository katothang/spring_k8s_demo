pipeline {
    agent any

    tools {
        // Install the Maven version configured as "M3" and add it to the path.
        maven "M3"
    }

    stages {
        stage('checkout project') {
            steps {
                sh 'git reset --hard origin/main'
                sh 'git checkout main'
                sh 'git pull'
            }
        }
        stage('build project') {
            steps {
                // Run Maven on a Unix agent.
                sh "mvn clean install -DskipTests"
            }
        }
    }
}
